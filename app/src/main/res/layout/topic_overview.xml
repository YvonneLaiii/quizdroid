<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">


<TextView
        android:text="Topic Overview"
        android:layout_width="123dp"
        android:layout_height="50dp"
        android:id="@+id/textView" android:textSize="18sp"
        android:layout_marginTop="88dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="152dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="152dp"/>
    <Button
            android:text="Begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/begin_btn" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/description" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="172dp" android:layout_marginStart="172dp"/>
    <TextView
            android:text="description"
            android:layout_width="285dp"
            android:layout_height="269dp"
            android:id="@+id/description" android:textSize="18sp"
            android:layout_marginTop="92dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginStart="72dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="72dp"/>
</android.support.constraint.ConstraintLayout>

