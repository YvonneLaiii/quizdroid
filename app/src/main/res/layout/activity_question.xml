<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <TextView
            android:text="TextView"
            android:layout_width="216dp"
            android:layout_height="0dp"
            android:id="@+id/textview_question" android:layout_marginTop="45dp"
            android:layout_marginBottom="45dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/answer_choices" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <RadioGroup
            android:id="@+id/answer_choices"
            android:layout_width="219dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="@+id/textview_question"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_question"
            android:layout_marginBottom="89dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_sumbit" android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp">

        <RadioButton
                android:id="@+id/option_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RadioButton"/>

        <RadioButton
                android:id="@+id/option_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RadioButton"/>

        <RadioButton
                android:id="@+id/option_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RadioButton"/>

        <RadioButton
                android:id="@+id/option_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RadioButton"/>
    </RadioGroup>
    <Button
            android:text="Sumbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sumbit"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="82dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="82dp"
            app:layout_constraintTop_toBottomOf="@+id/answer_choices" android:layout_marginBottom="300dp"/>
</android.support.constraint.ConstraintLayout>