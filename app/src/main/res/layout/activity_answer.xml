<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/textview_sum"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="99dp" app:layout_constraintEnd_toEndOf="@+id/textview_summary"
            app:layout_constraintTop_toTopOf="@+id/textview_correct"
            app:layout_constraintStart_toStartOf="@+id/textview_summary"
            app:layout_constraintBottom_toBottomOf="@+id/textview_summary"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textview_correct"
            app:layout_constraintTop_toBottomOf="@+id/textview_chosen" android:layout_marginBottom="99dp"
            app:layout_constraintEnd_toEndOf="@+id/textview_chosen"
            app:layout_constraintBottom_toTopOf="@+id/textview_summary"
            app:layout_constraintStart_toStartOf="@+id/textview_sum"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textview_chosen"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/textview_correct"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp" android:layout_marginStart="50dp" android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textview_summary"
            app:layout_constraintTop_toBottomOf="@+id/textview_correct" android:layout_marginBottom="89dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" android:layout_marginEnd="50dp" android:layout_marginRight="50dp"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/textview_summary" android:layout_marginLeft="71dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="71dp"
            app:layout_constraintTop_toBottomOf="@+id/textview_summary" android:layout_marginBottom="179dp"/>
</android.support.constraint.ConstraintLayout>